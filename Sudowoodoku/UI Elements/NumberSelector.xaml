<UserControl
    x:Class="Sudowoodoku.NumberSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sudowoodoku"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="11"
    d:DesignWidth="11"
	PointerEntered="UserControl_PointerEntered"
	PointerMoved="UserControl_PointerMoved"
	PointerReleased="UserControl_PointerReleased" Background="Transparent">
	<Grid x:Name="backgroundGrid" Width="11" Height="11" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<TextBlock x:Name="textBlock" HorizontalAlignment="Stretch" TextWrapping="NoWrap" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="7" TextAlignment="Center" Text="" OpticalMarginAlignment="TrimSideBearings" UseLayoutRounding="False" Padding="0,11,0,11"/>
	</Grid>
</UserControl>
